<div class="contents container clearfix" >
  <div class="left_content">
    <% if user_signed_in?%>
      <div class="user_background">
        <%= image_tag current_user.background_image,class:"user_background" %>
      </div>
      <div class="user_info clearfix">
        
        <%= image_tag current_user.avatar, class:"user_avatar" %>
        
        <%= link_to 'プロフィールの編集', edit_user_registration_path, class:"profile_edit" %>
      </div>
      <div class="user_profile">
          <h2><%= link_to "#{current_user.nickname}","/users/#{current_user.id}" %></h2>
          <div class="user_profile_text">
            <%= current_user.profile_text %>
          </div>
      </div>
    <% end %>
  </div>

  <div class="right_content">
    <div class="user_background">
      <%= image_tag current_user.background_image,class:"user_background" %>
    </div>
    <div class="user_info clearfix">
        
      <%= image_tag current_user.avatar, class:"user_avatar" %>
    </div>
    <div class="user_profile">
        <h2><%= link_to "#{@user.nickname}","/users/#{@user.id}" %></h2>
        <div class="user_profile_text">
          <%= @user.profile_text %>
        </div>
    </div>
    <% @articles.each do |article| %>
      <div class="post_shown_link_area">
        <%= render partial: "shared/article" , locals: { article: article }%>
        <%= link_to "","/articles/#{article.id}",method: :get, class:"post_shown_link" %>
      </div>
    <% end %>
    
    <%= paginate(@articles) %>
    

  </div>
  
</div>


