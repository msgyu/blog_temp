
<div class="signup_form">
  <div class="login_form">

    
    <h2>新規登録</h2>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field">
      <div class="label"><%= f.label :nickname %><br />
      <%= f.text_field :nickname, autofocus: true, maxlength: "12" %></div>
    </div>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    
    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
    
    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
    
    <div class="field">
      <%= f.text_area :profile_text, placeholder: "プロフィールを入力", class: "profile_area" %>
    </div>

    <div class="field">
      <%= f.label :avatar %></br>
      <%= f.file_field :avatar %>
    </div>

    <div class="field">
      <%= f.label :background_image %></br>
      <%= f.text_field :background_image %>
    </div>
    
    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
    <% end %>
    
    <%= render "devise/shared/links" %>
    
  </div>
</div>